semver=$(< package.json \
  grep version \
  | head -1 \
  | awk -F: '{ print $2 }' \
  | sed 's/[",]//g' \
  | tr -d '[:space:]')

v_semver="v$semver"

# ë¦´ë¦¬ì¦ˆ ë¸Œëœì¹˜ë¡œ ì „í™˜
release_branch="release/$v_semver"
echo "ğŸ¤˜ ë¦´ë¦¬ì¦ˆ ë¸Œëœì¹˜ $release_branch ë¡œ ì „í™˜í•©ë‹ˆë‹¤."
