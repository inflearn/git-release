  echo "âš ï¸ RC ë¸Œëœì¹˜ ë°°í¬ë¥¼ ì¤€ë¹„í•©ë‹ˆë‹¤."
  echo "git checkout rc"
  git checkout rc

  echo "git rebase $release_branch"
  git rebase "$release_branch" || exit_on_failedexit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ë‚˜ë¨¸ì§€ ê³¼ì •ì€ ìˆ˜ë™ìœ¼ë¡œ ì§„í–‰í•´ì£¼ì„¸ìš”."

  echo "git push -f origin rc"
  git push -f origin rc || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."

